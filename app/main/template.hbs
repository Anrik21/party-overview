<form>
    <div id="vtta-party">
        <table>
            <tr>
                <th rowspan="2">
                    <button class="btn-filter">
                        <i class="fas fa-filter {{#ifEquals filter 'none'}}inactive{{/ifEquals}}"></i>
                        {{#ifEquals filter 'visible' }}<i class="fas fa-eye"></i>{{/ifEquals}}
                        {{#ifEquals filter 'hidden' }}<i class="fas fa-eye-slash"></i>{{/ifEquals}}
                    </button>
                </th>
                <th style="width: 20%" rowspan="2">Name</th>
                <th rowspan="2"><i class="fas fa-heart"></i> HP</th>
                <th rowspan="2"><i class="fas fa-shield-alt"></i> AC</th>
                <th colspan="3">Passive</th>
            </tr>
            <tr>
                <th class="thick subcolumn">Perception</th>
                <th class="thick subcolumn">Investigation</th>
                <th class="thick subcolumn">Insight</th>
            </tr>
            {{#each data}}
            <tr>
                <td>
                    <button class="btn-toggle-visibility" data-actor="{{this.id }}">
                        {{#if this.isHidden }}<i class="value fas fa-eye-slash"></i>{{else}}<i
                            class="value fas fa-eye"></i>{{/if}}
                    </button>
                </td>
                <td style="width: 20%; font-weight: bold"><span class="name">{{ this.fullName }}</span></td>
                <td><span class="value">{{ this.hp.current }}/{{ this.hp.max }}</span></td>
                <td><span class="value">{{ this.ac }}</span></td>
                <td><span class="value">{{ this.passives.perception }}</span></td>
                <td><span class="value">{{ this.passives.investigation }}</span></td>
                <td><span class="value">{{ this.passives.insight }}</span></td>

            </tr>
            {{/each}}
        </table>
    </div>
</form>